# Sample config for Prometheus.

global:
  scrape_interval:     15s 
  evaluation_interval: 15s 

scrape_configs:

  - job_name: 'prometheus'

    scrape_interval: 5s
    scrape_timeout: 5s
    metrics_path: /prometheus/metrics
    static_configs:
      - targets: ['localhost:9090']

{% for job in prometheus_jobs %}

  - job_name: {{ job.name }}
    static_configs:
      - targets: 
      {% for vm in groups[job.target_group]%}
        - {{vm}}:{{ job.target_port }}
      {% endfor %}
{% endfor %}